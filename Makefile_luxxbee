# Makefile xbee_lux tab
.PHONY:clean

xbeelux_test01: xbeelux_test01.o luxsensor.o xbee_uart.o xbee_lib.o
	gcc xbeelux_test01.o luxsensor.o xbee_uart.o xbee_lib.o -o xbeelux_test01
	#これは実行ファイル

xbeelux_test01.o : xbeelux_test01.c
	gcc -c xbeelux_test01.c -o xbeelux_test01.o
	#これは実験用ソースファイル

luxsensor.o: luxsensor.c
	gcc -c luxsensor.c -o luxsensor.o -lwiringPi -lm 

xbee_uart.o: xbee_uart.c
	gcc -c xbee_uart.c -o xbee_uart.o

xbee_lib.o : xbee_lib.c
	gcc -c xbee_lib.c -o xbee_lib.o

xbeelux_test01.o : luxsensor.h xbee_uart.h
luxsensor.o : luxsensor.h xbee_uart.h wiringPi.h wiringPiI2C.h
xbee_uart.o : xbee_uart.h xbee_lib.h
xbee_lib.o: xbee_lib.h

clean:
	rm -f xbee_lib.o xbee_uart.o luxsensor.o xbeelux_test01.o
